{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/1nk1/flutter_keycheck/main/schemas/scan-coverage.v1.json",
  "title": "Flutter Keycheck Scan Coverage Schema",
  "version": "1.0.0",
  "description": "Schema for flutter_keycheck scan coverage metrics",
  "type": "object",
  "required": ["metrics", "detectors", "timestamp", "version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of scan"
    },
    "metrics": {
      "type": "object",
      "required": [
        "files_total",
        "files_scanned",
        "parse_success_rate",
        "widgets_total",
        "widgets_with_keys",
        "handlers_total",
        "handlers_linked"
      ],
      "properties": {
        "files_total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of Dart files found"
        },
        "files_scanned": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files successfully scanned"
        },
        "parse_success_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Fraction of files parsed successfully (0.0 to 1.0)"
        },
        "widgets_total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of widget instances found"
        },
        "widgets_with_keys": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of widgets that have keys"
        },
        "handlers_total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of event handlers found"
        },
        "handlers_linked": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of handlers linked to keyed widgets"
        }
      }
    },
    "detectors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "hits", "keys_found", "effectiveness"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Detector name"
          },
          "hits": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of times detector matched"
          },
          "keys_found": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of unique keys found by this detector"
          },
          "effectiveness": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Detector effectiveness percentage"
          }
        }
      }
    }
  }
}